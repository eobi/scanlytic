# Scamlytic API Configuration
# Copy this file to .env and update values

# =============================================================================
# Django Settings
# =============================================================================
DEBUG=False
SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,api.scamlytic.com

# Database (PostgreSQL recommended for production)
DATABASE_URL=postgres://user:password@localhost:5432/scamlytic
# For development, SQLite is fine:
# DATABASE_URL=sqlite:///db.sqlite3

# Redis (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://scamlytic.com,https://www.scamlytic.com

# =============================================================================
# Third-Party API Keys
# =============================================================================

# VirusTotal (https://www.virustotal.com/gui/join-us)
VIRUSTOTAL_API_KEY=

# Google Safe Browsing (https://developers.google.com/safe-browsing/v4/get-started)
GOOGLE_SAFE_BROWSING_API_KEY=

# PhishTank (https://www.phishtank.com/api_info.php)
PHISHTANK_API_KEY=

# IPQualityScore (https://www.ipqualityscore.com/)
